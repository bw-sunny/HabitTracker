<HabitInfoScreen>:
    name: 'habit_info'

    BoxLayout:
        orientation: 'vertical'
        spacing: dp(0)

        MDTopAppBar:
            title: "HabitTracker"
            left_action_items: [["arrow-left", lambda x: root.back_to_main()]]
            elevation: 10
            md_bg_color: app.theme_cls.primary_color

        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: dp(20)
                spacing: dp(20)

                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: dp(60)
                    spacing: dp(10)
                    padding: dp(10)

                    MDIcon:
                        id: habit_icon
                        icon: ""
                        size_hint: (None, None)
                        size: dp(48), dp(48)
                        theme_text_color: "Primary"

                    MDLabel:
                        id: habit_name
                        text: ""
                        font_style: "H5"
                        halign: 'left'
                        valign: 'center'
                        size_hint_x: 0.8

                MDLabel:
                    text: "Описание:"
                    font_style: "H6"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDLabel:
                    id: habit_description
                    text: ""
                    font_style: "Body1"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDLabel:
                    text: "Частота выполнения:"
                    font_style: "H6"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDLabel:
                    id: habit_frequency
                    text: ""
                    font_style: "Body1"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDLabel:
                    text: "Период выполнения:"
                    font_style: "H6"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDLabel:
                    id: habit_period
                    text: ""
                    font_style: "Body1"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDLabel:
                    id: progress_label
                    text: "Прогресс: 0%"
                    font_style: "H6"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDProgressBar:
                    id: progress_bar
                    value: 0
                    max: 100
                    size_hint_x: 0.9
                    pos_hint: {"center_x": 0.5}
                    height: "10dp"

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: dp(200)  # Увеличиваем высоту для вертикального расположения
            padding: dp(20)
            spacing: dp(10)

            MDRaisedButton:
                text: "Редактировать"
                size_hint_y: None
                height: dp(48)
                on_press: root.edit_habit()

            MDRaisedButton:
                id: complete_btn
                text: "Отметить выполнение"
                size_hint_y: None
                height: dp(48)
                on_press: root.mark_completed()

            MDRaisedButton:
                text: "Удалить"
                size_hint_y: None
                height: dp(48)
                on_press: root.show_delete_dialog()
                md_bg_color: app.theme_cls.error_color