<ProfileScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: "20dp"
        spacing: "10dp"

        MDTopAppBar:
            title: "Профиль"
            left_action_items: [['arrow-left', lambda x: root.back_to_main()]]
            elevation: 0

        ScrollView:
            MDBoxLayout:
                orientation: 'vertical'
                spacing: "20dp"
                size_hint_y: None
                height: self.minimum_height
                padding: [10, 0, 10, 10]

                MDTextField:
                    id: email_field
                    hint_text: "Ваш email"
                    size_hint_x: 0.9
                    pos_hint: {"center_x": 0.5}
                    mode: "rectangle"
                    readonly: False  # Разрешаем редактирование

        MDRaisedButton:
            text: "Сохранить изменения"
            size_hint_x: 0.9
            pos_hint: {"center_x": 0.5}
            on_release: root.save_profile()

        MDRaisedButton:
            text: "Выйти из аккаунта"
            size_hint_x: 0.9
            pos_hint: {"center_x": 0.5}
            md_bg_color: app.theme_cls.error_color
            on_release: root.logout()
